<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <ImageButton
        android:id="@+id/startButton"
        android:layout_width="117dp"
        android:layout_height="110dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/explainText"
        app:layout_constraintEnd_toEndOf="@+id/explainText"
        app:layout_constraintStart_toStartOf="@+id/explainText"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/button_start1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:layout_marginBottom="300dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameGameText"
        app:srcCompat="@drawable/top" />

    <TextView
        android:id="@+id/nameGameText"
        android:layout_width="273dp"
        android:layout_height="69dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="80dp"
        android:text="神経衰弱"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/explainText"
        android:layout_width="197dp"
        android:layout_height="44dp"
        android:layout_marginBottom="90dp"
        android:text="ここをクリック"
        android:textAlignment="center"
        android:textColor="#EF1010"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>